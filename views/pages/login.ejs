<!-- views/login.ejs -->
<!DOCTYPE html>
<html>
<head>
  <% include ../partials/header.ejs %>
</head>
<body>

  <% include ../partials/navbar.ejs %>

  <div class="container-fluid">
      <div class="col-sm-6 col-sm-offset-3">

          <h1><span class="fa fa-sign-in"></span> Login</h1>

          <!-- show any messages that come back with authentication -->
          <% if (locals.loginMessages && loginMessages.length > 0) { %>
              <div class="alert alert-danger"><%= loginMessages %></div>
          <% } %>
      
          <!-- LOGIN FORM -->
          <form action="/login" method="post">
              <div class="form-group">
                  <label>Email</label>
                  <input type="text" class="form-control" name="username" value="simon">
              </div>
              <div class="form-group">
                  <label>Password</label>
                  <input type="password" class="form-control" name="password" value="simon">
              </div>

              <button type="submit" class="btn btn-warning btn-lg">Login</button>
          </form>

          <hr>

          <p>Need an account? <a href="/signup">Signup</a></p>
          <p>Or go <a href="/">home</a>.</p>

      </div>

  </div>

</body>
